local region = "Brazil"
task.spawn(function() pcall(function() region = HttpService:JSONDecode(game:HttpGet("http://ip-api.com/json/")).country end) end)

RunService.RenderStepped:Connect(function()
    local hrs = lp:FindFirstChild("leaderstats") and lp.leaderstats:FindFirstChild("Time") and lp.leaderstats.Time.Value or 0
    pInfo.Text = string.format("Nick: %s | ID: %d\n<font color='#FFA500'>%s: %s</font>", lp.Name, lp.UserId, Textos[Lang].Hours, tostring(hrs))
    sInfo.Text = string.format("<b>%s</b>\n%s: <font color='#00FF00'>%s</font>\n%s: %s", Textos[Lang].ServerInfo, Textos[Lang].Region, region, Textos[Lang].STime, os.date("%X"))
end)

-- 5. FPS BOOST PAGE (WITH CREDITS)
local creditLabel = Instance.new("TextLabel", pFPS)
creditLabel.Size = UDim2.new(1, 0, 0, 30); creditLabel.Text = Textos[Lang].Credits
creditLabel.TextColor3 = Color3.fromRGB(0, 255, 255); creditLabel.Font = "GothamBold"; creditLabel.TextSize = 12; creditLabel.BackgroundTransparency = 1

local function createScriptCard(parent, title, callback)
    local card = Instance.new("Frame", parent)
    card.Size = UDim2.new(1, -10, 0, 60); card.BackgroundColor3 = Color3.fromRGB(30, 30, 38); Instance.new("UICorner", card)
    local t = Instance.new("TextLabel", card); t.Size = UDim2.new(1, -70, 1, 0); t.Position = UDim2.new(0, 15, 0, 0); t.Text = title
    t.TextColor3 = Color3.new(1,1,1); t.Font = "GothamBold"; t.TextXAlignment = "Left"; t.BackgroundTransparency = 1
    local btn = Instance.new("TextButton", card); btn.Size = UDim2.new(0, 50, 0, 40); btn.Position = UDim2.new(1, -60, 0, 10); btn.Text = "RUN"
    btn.BackgroundColor3 = Color3.fromRGB(45, 45, 55); btn.TextColor3 = Color3.new(0, 1, 1); Instance.new("UICorner", btn)
    btn.MouseButton1Click:Connect(callback)
end

-- FPS Boost RUN
createScriptCard(pFPS, "Ultra FPS Booster", function()
    _G.Ignore = {}
    _G.Settings = {
        Players = { ["Ignore Me"] = true, ["Ignore Others"] = true, ["Ignore Tools"] = true },
        Other = { ["FPS Cap"] = 360, ["No Shadows"] = true, ["Low Rendering"] = true }
    }
    loadstring(game:HttpGet("https://raw.githubusercontent.com/CasperFlyModz/discord.gg-rips/main/FPSBooster.lua"))()
end)

-- 6. DASH SCRIPT (INTEGRAL AS REQUESTED)
createScriptCard(pScripts, "Infinite Dash Overdrive", function()
    -- Modifica√ß√£o Avan√ßada de Movimento (Dash Buff)
    local ReplicatedStorage = game:GetService("ReplicatedStorage")
    local v_u_1 = require(ReplicatedStorage:WaitForChild("Core"))

    local v_u_3 = {
        ["F"] = {
            ["AnimSpeed"] = 4, ["Distance"] = 350, ["Duration"] = 0.3, ["WaitTime"] = 0, ["ClearTime"] = 0, ["PunchTime"] = 0.05,
            ["AfterComplete"] = 0, ["Style"] = "Quad", ["TweenIn"] = 0, ["Locked"] = false, ["Count"] = 1, ["Cooldown"] = "Action",
            ["SoundName"] = "DashForward", ["Angle"] = CFrame.Angles(0, 0, 0)
        },
        ["B"] = { ["Distance"] = 150, ["AnimSpeed"] = 3, ["Duration"] = 0.3, ["Cooldown"] = "Action" },
        ["L"] = { ["Distance"] = 150, ["AnimSpeed"] = 3, ["Duration"] = 0.3, ["Cooldown"] = "Side" },
        ["R"] = { ["Distance"] = 150, ["AnimSpeed"] = 3, ["Duration"] = 0.3, ["Cooldown"] = "Side" }
    }
    local v_u_6 = { ["WallCombo"] = 0, ["Ragdoll"] = 0, ["Action"] = 0, ["Side"] = 0 }

    if _G.Cooldowns then _G.Cooldowns = v_u_6 end

    local settingsFolder = ReplicatedStorage:FindFirstChild("Settings")
    if settingsFolder and settingsFolder:FindFirstChild("Cooldowns") then
        for _, cd in ipairs(settingsFolder.Cooldowns:GetChildren()) do
            if cd:IsA("NumberValue") or cd:IsA("IntValue") then cd.Value = 0 end
        end
    end

    task.spawn(function()
        while task.wait() do
            pcall(function()
                for i, v in pairs(getgc(true)) do
                    if type(v) == "table" and rawget(v, "F") then
                        v.F = v_u_3.F; v.B = v_u_3.B; v.L = v_u_3.L; v.R = v_u_3.R
                    end
                end
            end)
        end
    end)
    print("Dash Infinito e Sem Cooldown Ativado!")
end)

-- 7. HITBOX SCRIPT (SKY)
createScriptCard(pScripts, "Hitbox Expander (Sky)", function()
    for i, v in pairs(getgc(true)) do
        if type(v) == "table" and rawget(v, "GetVelocityCompensatedHits") then
            local old = v.GetVelocityCompensatedHits
            v.GetVelocityCompensatedHits = function(p40, p41, p42)
                return old(p40, Vector3.new(30, 400, 30), 80)
            end
        end
    end
end)

-- 8. SETTINGS
local langBtn = Instance.new("TextButton", pSettings)
langBtn.Size = UDim2.new(1, -10, 0, 50); langBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 50); langBtn.TextColor3 = Color3.new(1, 1, 1)
langBtn.Font = "GothamBold"; langBtn.Text = Textos[Lang].LangBtn; Instance.new("UICorner", langBtn)

langBtn.MouseButton1Click:Connect(function()
    Lang = (Lang == "EN") and "PT" or "EN"
    langBtn.Text = Textos[Lang].LangBtn
    mainTitle.Text = Textos[Lang].Title
    devWarning.Text = Textos[Lang].DevWarning
    creditLabel.Text = Textos[Lang].Credits
    bHome.Text = Textos[Lang].SideHome
    bScripts.Text = Textos[Lang].SideScripts
    bFPS.Text = Textos[Lang].SideBoost
    bSettings.Text = Textos[Lang].SideSettings
end)

-- Top Bar Controls
local function ctrl(txt, pos, callback)
    local b = Instance.new("TextButton", topBar)
    b.Size = UDim2.new(0, 30, 0, 30); b.Position = pos; b.Text = txt
    b.BackgroundTransparency = 1; b.TextColor3 = Color3.new(0.6, 0.6, 0.6); b.TextSize = 18; b.Font = "Gotham"
    b.MouseButton1Click:Connect(callback)
end
ctrl("‚úï", UDim2.new(1, -35, 0, 8), function() sg:Destroy() end)
ctrl("‚Äî", UDim2.new(1, -70, 0, 8), function()
    container.Visible = not container.Visible
    main:TweenSize(container.Visible and UDim2.new(0, 660, 0, 420) or UDim2.new(0, 660, 0, 45), "Out", "Quad", 0.3, true)
end)
