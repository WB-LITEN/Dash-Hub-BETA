end)

RunService.RenderStepped:Connect(function()
    local t = math.floor(os.clock() - startClock)
    local h, m, s = math.floor(t/3600), math.floor((t%3600)/60), t%60
    info.Text = string.format("%s\nName: %s\nUserId: %d\nTime Played: %02d:%02d:%02d\n\n%s\nRegion: %s",
        TXT[Lang].PlayerInfo, lp.Name, lp.UserId, h,m,s, TXT[Lang].ServerInfo, region)
end)

-- === TOGGLE FUNCTION ===
local function toggle(parent,name,onF,offF)
    local f = Instance.new("Frame", parent)
    f.Size = UDim2.new(1,-20,0,60)
    f.BackgroundColor3 = COLORS.Card
    Instance.new("UICorner", f)
    
    local t = Instance.new("TextLabel", f)
    t.Text = name
    t.Font = Enum.Font.GothamBold
    t.TextSize = 13
    t.TextColor3 = COLORS.Text
    t.BackgroundTransparency = 1
    t.Size = UDim2.new(1,-100,1,0)
    t.Position = UDim2.new(0,15,0,0)
    t.TextXAlignment = Enum.TextXAlignment.Left
    
    local b = Instance.new("TextButton", f)
    b.Size = UDim2.new(0,70,0,34)
    b.Position = UDim2.new(1,-85,0.5,-17)
    b.Font = Enum.Font.GothamBold
    b.TextSize = 12
    Instance.new("UICorner", b)
    
    local on = false
    local function refresh()
        b.Text = on and "ON" or "OFF"
        b.BackgroundColor3 = on and COLORS.ON or COLORS.OFF
    end
    
    b.MouseButton1Click:Connect(function()
        on = not on
        if on then onF() else offF() end
        refresh()
    end)
    refresh()
end

-- ================= SCRIPTS IMPLEMENTATION =================

-- 1. INFINITE DASH (FIXED VISIBILITY)
local dashConn
local dashSettings = {
    ["F"] = { ["AnimSpeed"] = 5, ["Distance"] = 3, ["Duration"] = 0.2, ["Cooldown"] = "Action", ["Locked"] = false },
    ["B"] = { ["Distance"]=150, ["AnimSpeed"]=4, ["Duration"]=0.2, ["Cooldown"]="Action" },
    ["L"] = { ["Distance"]=150, ["AnimSpeed"]=4, ["Duration"]=0.2, ["Cooldown"]="Side" },
    ["R"] = { ["Distance"]=150, ["AnimSpeed"]=4, ["Duration"]=0.2, ["Cooldown"]="Side" }
}
local noCooldowns = { ["WallCombo"]=0, ["Ragdoll"]=0, ["Action"]=0, ["Side"]=0 }

-- Adiciona o bot√£o explicitamente na p√°gina Scripts
toggle(Scripts, TXT[Lang].Dash, function()
    -- L√≥gica do Dash
    local success, Core = pcall(function() return require(ReplicatedStorage.Core) end)
    dashConn = RunService.Heartbeat:Connect(function()
        if success and Core then
            if _G.Cooldowns then _G.Cooldowns = noCooldowns end
            if type(Core) == "table" then
                for key, val in pairs(dashSettings) do
                    if Core[key] then 
                        for k, v in pairs(val) do Core[key][k] = v end
                    elseif Core.DashSettings and Core.DashSettings[key] then
                        for k, v in pairs(val) do Core.DashSettings[key][k] = v end
                    end
                end
            end
        end
    end)
    -- For√ßar Cooldowns da Pasta Settings a 0
    local sFolder = ReplicatedStorage:FindFirstChild("Settings")
    if sFolder and sFolder:FindFirstChild("Cooldowns") then
        for _, cd in ipairs(sFolder.Cooldowns:GetChildren()) do
            if cd:IsA("NumberValue") or cd:IsA("IntValue") then cd.Value = 0 end
        end
    end
end, function()
    if dashConn then dashConn:Disconnect() end
end)

-- 2. HITBOX
local hitConn
local targetTable = nil 

toggle(Scripts, TXT[Lang].Hitbox, function()
    if not targetTable then
        for _, v in pairs(getgc(true)) do
            if type(v) == "table" and rawget(v, "GetVelocityCompensatedHits") then
                targetTable = v; break 
            end
        end
    end
    if targetTable then
        local old = targetTable.GetVelocityCompensatedHits
        targetTable.GetVelocityCompensatedHits = function(p1, p2, p3)
            return old(p1, Vector3.new(30, 400, 30), 80)
        end
        hitConn = true 
    end
end, function()
    hitConn = false
end)

-- 3. GOD BLOCK 360¬∞ (NPC & PLAYER AUTO-FACE)
local godBlockConn
local blockGyro = Instance.new("BodyGyro")
blockGyro.MaxTorque = Vector3.new(0, 0, 0)
blockGyro.P = 45000

toggle(Scripts, TXT[Lang].GodBlock, function()
    godBlockConn = RunService.Heartbeat:Connect(function()
        local char = lp.Character
        local root = char and char:FindFirstChild("HumanoidRootPart")
        
        if char and root then
            char:SetAttribute("CanBlock", true)
            blockGyro.Parent = root
            
            if char:GetAttribute("LocalBlock") or _G.Block then
                char:SetAttribute("Block", true)
                
                local closestTarget = nil
                local shortestDist = 35
                
                for _, obj in pairs(game.Workspace:GetDescendants()) do
                    if obj:IsA("Humanoid") and obj.Parent ~= char then
                        local targetRoot = obj.Parent:FindFirstChild("HumanoidRootPart")
                        if targetRoot then
                            local dist = (root.Position - targetRoot.Position).Magnitude
                            if dist < shortestDist then
                                shortestDist = dist
                                closestTarget = targetRoot
                            end
                        end
                    end
                end
                
                if closestTarget then
                    blockGyro.MaxTorque = Vector3.new(0, 500000, 0)
                    local targetPos = Vector3.new(closestTarget.Position.X, root.Position.Y, closestTarget.Position.Z)
                    blockGyro.CFrame = CFrame.new(root.Position, targetPos)
                else
                    blockGyro.MaxTorque = Vector3.new(0, 0, 0)
                end
            else
                blockGyro.MaxTorque = Vector3.new(0, 0, 0)
            end
        end
    end)
end, function()
    if godBlockConn then godBlockConn:Disconnect() end
    blockGyro.Parent = nil
end)

-- 4. FPS BOOST
toggle(FPS, TXT[Lang].FPSBoost, function()
    setfpscap(360)
    game:GetService("Lighting").GlobalShadows = false
    task.spawn(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/CasperFlyModz/discord.gg-rips/main/FPSBooster.lua"))()
    end)
end, function()
    setfpscap(60)
    game:GetService("Lighting").GlobalShadows = true
end)

